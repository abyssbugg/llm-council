# ========================================
# LLM Council Environment Configuration
# ========================================

# ----------------------------------------
# API Keys (Required to enable respective provider)
# ----------------------------------------
# Primary LLM Providers - Set at least one
HUGGINGFACE_API_KEY="your_huggingface_api_key_here"   # Get from: https://huggingface.co/settings/tokens
CHUTES_AI_API_KEY="your_chutes_ai_api_key_here"       # Get from Chutes AI platform

# Optional - Additional providers (only set if you want to use them)
# ANTHROPIC_API_KEY="your_anthropic_api_key_here"     # Format: sk-ant-api03-...
# PERPLEXITY_API_KEY="your_perplexity_api_key_here"   # Format: pplx-...
# OPENAI_API_KEY="your_openai_api_key_here"           # Format: sk-proj-...
# GOOGLE_API_KEY="your_google_api_key_here"           # For Google Gemini models
# MISTRAL_API_KEY="your_mistral_key_here"             # For Mistral AI models
# XAI_API_KEY="YOUR_XAI_KEY_HERE"                     # For xAI models
# GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                   # For Groq models
# OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"       # For OpenRouter models
# GITHUB_API_KEY="your_github_api_key_here"           # For GitHub import/export

# ----------------------------------------
# Database Configuration
# ----------------------------------------
DATABASE_URL="postgresql+asyncpg://llmcouncil:llmcouncil_password@localhost:5432/llmcouncil"
POSTGRES_USER="llmcouncil"
POSTGRES_PASSWORD="llmcouncil_password"
POSTGRES_DB="llmcouncil"
POSTGRES_PORT="5432"

# ----------------------------------------
# Redis Cache Configuration
# ----------------------------------------
REDIS_URL="redis://localhost:6379/0"
REDIS_ENABLED="true"
REDIS_PORT="6379"

# ----------------------------------------
# Application Configuration
# ----------------------------------------
PORT="8001"
HOST="0.0.0.0"
BACKEND_PORT="8001"
FRONTEND_PORT="5173"

# ----------------------------------------
# Security Configuration
# ----------------------------------------
SECRET_KEY="change_this_secret_key_in_production_use_a_long_random_string"
ACCESS_TOKEN_EXPIRE_MINUTES="30"

# ----------------------------------------
# Cost Tracking Configuration
# ----------------------------------------
DEFAULT_DAILY_BUDGET_LIMIT="20.0"